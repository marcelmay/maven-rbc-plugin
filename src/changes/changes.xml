<?xml version="1.0" encoding="ISO-8859-1"?>

<!--
 See the documentation at http://maven.apache.org/plugins/maven-changes-plugin/usage.html

 Possible action types: add, fix, remove, update

 For third party updates, please add a link to the release notes!
 -->
<document xmlns="http://maven.apache.org/changes/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
  <properties>
    <title>Changes</title>
  </properties>
  <body>
    <release version="0.8" date="?.?.2014" description="Release 0.8">
      <action type="update" dev="mm">
        Updated Ant to 1.9.3
      </action>
      <action type="update" dev="mm">
        Requires now Maven 3.2.x .
      </action>
    </release>
    <release version="0.7" date="03.04.2013" description="Release 0.7">
      <action type="fix" dev="mm" issue="6">
        Failed to execute goal de.m3y.maven:rbc-maven-plugin ... required class SinkEventAttributes missing
      </action>
      <action type="fix" dev="mm" issue="5">
        Invoking rbc:report leads to stack overflow
      </action>
      <action type="update" dev="mm">
        Updated Ant to 1.9.0
      </action>
      <action type="update" dev="mm">
        Updated gmaven to latest 1.5
      </action>
    </release>
    <release version="0.6" date="23.07.2012" description="Release 0.6">
      <action type="fix" dev="mm">
        Report should contain source relative to bundle root, eg src/main/resources.
      </action>
      <action type="fix" dev="mm" issue="3">
        Build does not fail when failOnError is set true.
        Plugin fails to check and report for multi module builds.
        Special thx to Fernando Dourado for reporting and help.
      </action>
      <action type="fix" dev="mm" issue="4">
        Unable to build from source. Special thx to Fernando Dourado for reporting and help.
      </action>
      <action type="update" dev="mm">
        Updated ant to 1.8.4
      </action>
      <action type="fix" dev="mm" issue="1">
        Fix plugin artifact name: Renamed to rbc-maven-plugin, for Maven compliance.
      </action>
      <action type="update" dev="mm">
        Updated to gmaven 1.4
      </action>
      <action type="update" dev="mm">
        Switched to http://maven.apache.org/skins/maven-fluido-skin/ skin.
      </action>
    </release>
    <release version="0.5" date="30.09.2011" description="Release 0.5">
      <action type="fix" dev="mm">
        Locales missing from report.
      </action>
      <action type="update" dev="mm">
        Updated org.codehaus.plexus:plexus-utils to 3.0 .
      </action>
      <action type="add" dev="mm">
        Added number of issues to report bundle details title.
      </action>
      <action type="update" dev="mm">
        Updated plugin to Maven 3 dependencies.
      </action>
    </release>
    <release version="0.4" date="22.01.2011" description="Release 0.4">
      <action type="update" dev="mm">
        Updated docs and added screenshots.
      </action>
      <action type="add" dev="mm">
        Added reporting goal.
      </action>
      <action type="add" dev="mm">
        Added integration test for plugin.
      </action>
      <action type="add" dev="mm">
        Requires Maven 2.2.1+
      </action>
      <action type="update" dev="mm">
        Updated rscbundlecheck from 1.30 to 1.31
      </action>
      <action type="update" dev="mm">
        Updated gmaven from 1.0 to 1.3
      </action>
      <action type="update" dev="mm">
        Updated groovy from 1.6.0 to 1.7.6, embedded Ant is version 1.8.2
      </action>
    </release>
    <release version="0.3" date="22.07.2009" description="Release 0.3">
      <action type="add" dev="mm">
        Warn about missing resource bundle files for locales. Locales get auto detected by
        collecting locales from resource file names.
      </action>
      <action type="update" dev="mm">
        Updated gmaven to 1.0
      </action>
      <action type="update" dev="mm">
        Updated maven-site-plugin from 2.0 to 2.0.1
      </action>
    </release>
    <release version="0.2" date="12.06.2009" description="Release 0.2">
      <action type="add" dev="mm">
        Fixed bundle wise checking, previously all resource files were checked.
      </action>
    </release>
    <release version="0.1" date="15.05.2009" description="Initial release 0.1">
      <action type="add" dev="mm">
        Initial release, based on http://rscbundlecheck.sourceforge.net/ Rscbundlecheck
      </action>
    </release>
  </body>
</document>
